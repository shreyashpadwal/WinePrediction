# Wine Quality Prediction Frontend - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development: http://localhost:8000/api/v1
# Production: https://your-api-domain.com/api/v1
# Docker: http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# API retry attempts
VITE_API_RETRIES=3

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
VITE_ENVIRONMENT=development

# Application name
VITE_APP_NAME=Wine Quality Predictor

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=A machine learning application for predicting wine quality

# =============================================================================
# DEBUG AND DEVELOPMENT
# =============================================================================

# Enable debug mode (true for development, false for production)
VITE_DEBUG=true

# Enable console logging
VITE_ENABLE_CONSOLE_LOG=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
VITE_ENABLE_MODEL_COMPARISON=true
VITE_ENABLE_AI_EXPLANATIONS=true
VITE_ENABLE_FEATURE_VISUALIZATION=true
VITE_ENABLE_PREDICTION_HISTORY=false
VITE_ENABLE_EXPORT_RESULTS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme configuration
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true

# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================

# Form validation settings
VITE_ENABLE_REAL_TIME_VALIDATION=true
VITE_SHOW_VALIDATION_ERRORS=true
VITE_VALIDATION_DEBOUNCE_MS=300

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Enable lazy loading
VITE_ENABLE_LAZY_LOADING=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=

# Sentry error tracking (optional)
VITE_SENTRY_DSN=

# Application Insights (optional)
VITE_APP_INSIGHTS_CONNECTION_STRING=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API configurations
VITE_EXTERNAL_API_TIMEOUT=10000
VITE_EXTERNAL_API_RETRIES=2

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=false

# HTTPS enforcement
VITE_FORCE_HTTPS=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build mode (development, production)
VITE_BUILD_MODE=development

# Source map generation
VITE_GENERATE_SOURCE_MAPS=true

# Bundle analyzer
VITE_ENABLE_BUNDLE_ANALYZER=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment
VITE_TEST_ENVIRONMENT=false

# Mock API for testing
VITE_MOCK_API=false

# Test data configuration
VITE_ENABLE_TEST_DATA=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Base URL for deployment
VITE_BASE_URL=/

# Public path for assets
VITE_PUBLIC_PATH=/

# =============================================================================
# AZURE CONFIGURATION (For Azure Static Web Apps)
# =============================================================================

# Azure Static Web Apps configuration
VITE_AZURE_STATIC_WEB_APPS_ENABLED=false

# Azure API URL (if using Azure Functions)
VITE_AZURE_API_URL=

# Azure Storage Account (if using Azure Blob Storage)
VITE_AZURE_STORAGE_ACCOUNT_NAME=
VITE_AZURE_STORAGE_CONTAINER_NAME=

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production-specific settings
# Uncomment and configure for production deployment

# CDN URL for static assets
# VITE_CDN_URL=https://cdn.yourdomain.com

# API Gateway URL
# VITE_API_GATEWAY_URL=https://api.yourdomain.com

# WebSocket URL (if using real-time features)
# VITE_WEBSOCKET_URL=wss://ws.yourdomain.com

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom configuration values
# Add any project-specific configuration here

# Wine quality prediction specific
VITE_DEFAULT_WINE_FEATURES='{"fixed_acidity": 7.4, "volatile_acidity": 0.7, "citric_acid": 0.0, "residual_sugar": 1.9, "chlorides": 0.076, "free_sulfur_dioxide": 11.0, "total_sulfur_dioxide": 34.0, "density": 0.9978, "ph": 3.51, "sulphates": 0.56, "alcohol": 9.4}'

# Prediction confidence threshold
VITE_PREDICTION_CONFIDENCE_THRESHOLD=0.5

# Maximum number of predictions to store
VITE_MAX_PREDICTION_HISTORY=10

# =============================================================================
# NOTES
# =============================================================================

# 1. All VITE_ prefixed variables are exposed to the client-side code
# 2. Never put sensitive information in VITE_ variables
# 3. Use different .env files for different environments
# 4. The .env file is loaded automatically by Vite
# 5. Variables can be accessed in code using: import.meta.env.VITE_VARIABLE_NAME
# 6. For production, build with: npm run build
# 7. Environment variables are embedded at build time
# 8. Restart the dev server after changing .env variables
